# Docker connection
DOCKER_BASE_URL=unix://var/run/docker.sock

# Data root for server volumes (host-mounted)
# If running inside Docker, this is the container path that is mounted.
DATA_ROOT=/data/minecraft

# Host path used for Docker volume binds (must be absolute).
# Proxmox LXC recommended path:
HOST_DATA_ROOT=/opt/mcserver/data/minecraft

# Minecraft image
MINECRAFT_IMAGE=itzg/minecraft-server

# Modrinth API base
MODRINTH_BASE_URL=https://api.modrinth.com/v2

# Port range for auto assignment
PORT_RANGE_START=25565
PORT_RANGE_END=25665

# Default memory allocation per server (MB)
DEFAULT_MEMORY_MB=2048

# Default RCON settings for new servers
DEFAULT_ENABLE_RCON=false
DEFAULT_RCON_PASSWORD=

# Labels used to identify managed containers
MANAGED_LABEL=mc.manager
MANAGED_LABEL_VALUE=fastapi

# Authentication (required on first boot)
# Generate a strong secret for cookie signing.
AUTH_SECRET=
# Cookie settings: set true when behind HTTPS.
AUTH_COOKIE_SECURE=false
AUTH_COOKIE_NAME=mcserver_session
SESSION_TTL_HOURS=24

# Owner account bootstrap (used only when no users exist)
OWNER_USERNAME=owner
OWNER_PASSWORD=change_me
